<div class="shop text-muted">
    <div class="container d-flex justify-content-center">
        <form action="/product/search" method="post" class="form-inline row my-2 my-lg-0 col-12 justify-content-center">
            <input class="form-control col-8 mr-2" name="searchTerm" type="text" placeholder="Search products..." aria-label="Search">
            <button class="btn btn-primary my-2" id="searchButton" type="submit">Search</button>
        </form>
    </div>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="card product_card col-md-6 col-xl-4">
                {{#if featuredImage}}
                <a href="/product/{{_id}}" title="{{name}}"><img src="/{{featuredImage}}" class="" alt="{{name}}"></a> 
                {{else}}
                <img data-src="holder.js/520x693?text=No Image" alt="Card image cap"> 
                {{/if}}

                <a class="text-dark text-truncate" href="/product/{{_id}}">{{name}}</a>
                <div class="d-flex justify-content-between align-items-center mt-2">
                    <span class="price">${{price}}</span>
                    <a href="#" data-id="{{_id}}" class="btn btn-primary addToCart">Add to cart</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>